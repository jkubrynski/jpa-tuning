<configuration>
    <evaluator name="DISP_CALLER_EVAL">
        <expression>message.contains("insert") || message.contains("select") || message.contains("update") || message.contains("delete")</expression>
    </evaluator>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                [%relative ms] %logger{0}: %msg%n%caller{4..25, DISP_CALLER_EVAL}
            </pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <!--<logger name="org.hibernate.persister.entity" level="TRACE"/>-->
    <!--<logger name="org.hibernate.type" level="TRACE"/>-->
    <logger name="com.kubrynski" level="DEBUG"/>

</configuration>